<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아메리카노 (1000원)"
        />

    <EditText
        android:id="@+id/editText_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:background="#D2BAD8"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카페라떼(1500원)" />

    <EditText
        android:background="#D2BAD8"
        android:id="@+id/editText_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카페모카 (1700원)" />

    <EditText
        android:background="#D2BAD8"
        android:id="@+id/editText_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />


    <CheckBox
        android:id="@+id/checkBox_ch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할인카드 있음(10% 할인)"
        android:checked="false"/>

    <Button
        android:id="@+id/button_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="총 금액 계산"
        android:textColor="@color/black"
        android:backgroundTint="#AFB1B3"
        android:onClick="countAll"
        />

    <TextView
        android:id="@+id/textView_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문개수 : "
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/textView_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할인금액 : "
        android:textColor="@color/teal_700"/>

    <TextView
        android:id="@+id/textView_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제금액 : "
        android:textColor="#F44336"/>

</LinearLayout>